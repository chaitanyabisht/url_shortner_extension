{
    "name": "URL Shortener",
    "description": "Shortening URLs",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/icon-16x16.png",
            "32": "/images/icon-32x32.png",
            "128": "/images/icon-128x128.png"
        }
    },
    "icons": {
        "16": "/images/icon-16x16.png",
        "32": "/images/icon-32x32.png",
        "128": "/images/icon-128x128.png"
    },
    "options_page": "options.html",
    "permissions": [
        "storage",
        "activeTab"
    ]
}